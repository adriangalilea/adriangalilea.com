---
import removeTrailingSlash from "@/utils/removeTrailingSlash";
import presentation from "@/data/bio";

const pathname = removeTrailingSlash(Astro.url.pathname);
---

<header
  class="z-40 flex w-full flex-col gap-2 items-center md:flex-row md:justify-between pb-2 border-b border-neutral-500"
>
  <h1 class="prose prose-zinc dark:prose-invert text-3xl">
    <a href="/" class="no-underline font-extrabold dark:text-neutral-300">
      {presentation.title}
    </a>
  </h1>

  <nav role="navigation">
    <ul role="list" class="flex flex-row gap-2">
      <li>
        <a
          href="/"
          class:list={{
            ["hover:text-neutral-100"]: true,
            ["opacity-40"]: pathname === "/",
          }}>home</a
        >
      </li>
      <li>/</li>
      <li>
        <a
          href="/blog"
          class:list={{
            ["hover:text-neutral-100"]: true,
            ["opacity-40"]: pathname.startsWith("/blog"),
          }}>blog</a
        >
      </li>
    </ul>
  </nav>
</header>
