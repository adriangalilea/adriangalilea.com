---
import type { Project } from "@/data/projects";
import ProjectCardContent from "@/components/ProjectCardContent.astro";

type Props = Project;

const { link, isComingSoon } = Astro.props;
---

<>
  {
    isComingSoon && (
      <div class="t group flex w-full flex-col justify-between gap-2 rounded-md border border-neutral-700 p-4 md:flex-row md:items-center">
        <ProjectCardContent {...Astro.props} />
      </div>
    )
  }

  {
    !isComingSoon && (
      <a
        class="group flex w-full cursor-pointer flex-col justify-between gap-2 rounded-md border border-neutral-700 p-4 transition-all duration-300 hover:border-neutral-400 md:flex-row md:items-center"
        href={link}
        target="_blank"
        rel="noreferrer"
      >
        <ProjectCardContent {...Astro.props} />
      </a>
    )
  }
</>
